<%= form_with(model: r_report, class: "contents") do |form| %>
  <% if r_report.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(r_report.errors.count, "error") %> prohibited this r_report from being saved:</h2>

      <ul>
        <% r_report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.select :content, ["rails1", "rails2", "rails3", "custom"], { prompt: "-- 選択してください --" }, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", id: "content-select" } %>
    <%= form.text_field :custom_content, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "-- 自由に入力してください --", id: "custom-content-field", style: "display: none;" } %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const selectField = document.getElementById('content-select');
      const customField = document.getElementById('custom-content-field');

      selectField.addEventListener('change', function() {
        if (selectField.value === 'custom') {
          customField.style.display = 'block';
        } else {
          customField.style.display = 'none';
        }
      });
    });
  </script>

  <div class="my-5">
    <%= form.label :time %>
    <%= form.number_field :time, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :credo %>
    <%= form.select :credo, ["ヤクルト", "ああああああ", "毎週提出"], {}, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
